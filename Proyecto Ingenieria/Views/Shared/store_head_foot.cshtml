<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tesla</title>
    <link rel="stylesheet" href="~/StoreTemplate/css/indexStyle.css">
</head>
<body>
    <!-- Preloader -->
    <div id="preloader">
        <div class="preloader-content">
            <img src="~/StoreTemplate/images/logo-default.png" alt="Tesla Logo" class="preloader-logo">
        </div>
    </div>
    <header class="transparent-header">
        <div class="logo">
            <img src="~/StoreTemplate/images/logo-default.png" alt="Tesla Logo">
        </div>

        <!-- Botón del menú hamburguesa -->
        <button class="menu-toggle" aria-label="Toggle Menu">
            <svg xmlns="http://www.w3.org/2000/svg" fill="#ffffff" viewBox="0 0 24 24" width="24px" height="24px">
                <path d="M3 6h18M3 12h18M3 18h18" stroke="#fff" stroke-width="2" stroke-linecap="round" />
            </svg>
        </button>

        <!-- Menú de navegación -->
        <nav class="menu">
            <ul>
                <li><a href="#">Vehicles</a></li>
                <li><a href="#">Energy</a></li>
                <li><a href="#">Charging</a></li>
                <li><a href="#">Discover</a></li>
                <li><a href="#">Shop</a></li>
                <li><a href="#">We, Robot</a></li>
            </ul>
        </nav>

        <!-- Íconos -->
        <div class="icons">
            <a href="#" class="icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="#FFFFFF" width="20px" height="20px">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 17h-2v-2h2v2zm1.31-7.5l-.9.92c-.58.59-.91 1.35-.91 2.58h-2v-.5c0-1.13.33-2.22 1.11-3l1.2-1.2c.37-.37.62-.88.62-1.45 0-1.1-.9-2-2-2s-2 .9-2 2H8c0-2.21 1.79-4 4-4s4 1.79 4 4c0 .89-.34 1.7-.69 2.5z" />
                </svg>
            </a>
            <a href="#" class="icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="#FFFFFF" width="20px" height="20px">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 2c1.43 0 2.75.49 3.81 1.31-1.7 1.11-3.39 1.45-4.39 1.45-1 0-2.69-.34-4.39-1.45A7.93 7.93 0 0112 4zm-6 8c0-.34.03-.67.08-1h11.84c.05.33.08.66.08 1s-.03.67-.08 1H6.08c-.05-.33-.08-.66-.08-1zm6 8c-1.43 0-2.75-.49-3.81-1.31 1.7-1.11 3.39-1.45 4.39-1.45 1 0 2.69.34 4.39 1.45A7.93 7.93 0 0112 20z" />
                </svg>
            </a>
            <a href="/Account" class="icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="#FFFFFF" width="20px" height="20px">
                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
                </svg>
            </a>
        </div>
    </header>

    

    @RenderBody()


    
    <footer>
        <p>&copy; Tesla</p>
    </footer>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const preloader = document.getElementById("preloader");

        // Espera a que la página termine de cargarse
        window.addEventListener("load", () => {
          // Retraso adicional antes de iniciar la animación de desvanecimiento
          setTimeout(() => {
            preloader.style.opacity = "0"; // Suaviza la desaparición
            preloader.style.transition = "opacity 0.5s ease"; // Efecto de desvanecimiento

            // Espera hasta que la transición de opacidad termine para eliminar el preloader
            setTimeout(() => {
              preloader.style.display = "none"; // Elimina el preloader del flujo
            }, 500); // Tiempo para completar la transición de opacidad
          }, 1000); // Retraso adicional de 1 segundo
        });
      });
    </script>


    <script>
        
            document.addEventListener("DOMContentLoaded", () => {
                const menuToggle = document.querySelector(".menu-toggle");
                const menu = document.querySelector("nav.menu");

                menuToggle.addEventListener("click", () => {
                    menu.classList.toggle("active"); // Muestra/oculta el menú
                });
            });
    </script>

    </script>
</body>
</html>
